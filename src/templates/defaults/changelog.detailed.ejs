<% if (sections.notes.length > 0) { %>
## Notes
<% sections.notes.forEach((note) => { %>
### <%= note.title %>
<% note.items.forEach(item => { %>
<% 
  const commitLinks = `[#${item.commit.raw.shortHash}](#commit-${item.commit.raw.shortHash})`;
%>
- <%= item.note.content %> (<%= commitLinks %>)
<% }) %>
<% }) %>
